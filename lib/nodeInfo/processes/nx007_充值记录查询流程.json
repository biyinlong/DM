{
	"name": "nx007_充值记录查询流程",
	"init_step": "isHaveCZJL",
	"onEnterAction": [{
		"property": "broadcastReply",
		"actionParams": ["false",
		"nx007_lb"]
	}],
	"steps": [{
		"name": "isHaveCZJL",
		"property": "APIStep",
		"functionEntity": {
			"input": {
				"tel": "$tel$"
			},
			"functionName": "czjl",
			"output": ["是否存在充值记录",
			"是否欠费停机",
			"停机下充值记录内容",
			"未停机下充值记录内容",
			"充值记录短信内容"]
		},
		"transitions": [{
			"condition": "isHaveCZJL.是否存在充值记录 == false ",
			"actions": [{
				"property": "broadcastReply",
				"actionParams": ["false",
				"nx007_01"]
			},
			{
				"property": "broadcastReply",
				"actionParams": ["true",
				"nx_more"]
			},
			{
				"property": "backToMainMenu",
				"actionParams": []
			}]
		},
		{
			"condition": "isHaveCZJL.是否存在充值记录 == true && isHaveCZJL.是否欠费停机==true",
			"actions": [{
				"property": "synthesisReply",
				"actionParams": ["false",
				"$isHaveCZJL.停机下充值记录内容$"]
			},
			{
				"property": "broadcastReply",
				"actionParams": ["true",
				"nx_more1"]
			},
			{
				"property": "backToMainMenu",
				"actionParams": []
			}]
		},
		{
			"condition": "isHaveCZJL.是否存在充值记录 == true && isHaveCZJL.是否欠费停机==false",
			"actions": [{
				"property": "synthesisReply",
				"actionParams": ["false",
				"$isHaveCZJL.未停机下充值记录内容$"]
			},
			{
				"property": "executeStepAction",
				"actionParams": ["sendMess"]
			},
			{
				"property": "broadcastReply",
				"actionParams": ["true",
				"nx_busi_success"]
			},
			{
				"property": "backToMainMenu",
				"actionParams": []
			}]
		}]
	},
	{
		"name": "sendMess",
		"property": "APIStep",
		"functionEntity": {
			"input": {
				"tel": "$tel$",
				"content": "$isHaveCZJL.充值记录短信内容$"
			},
			"functionName": "dxxf",
			"output": []
		}
	}]
}